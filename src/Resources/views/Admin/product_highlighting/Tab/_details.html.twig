<div class="ui active tab" data-tab="details">
    <h3 class="ui top attached header">{{ 'sylius.ui.details'|trans }}</h3>

    <div class="ui attached segment">
        <div class="ui two column stackable grid">
            <div class="column">
                <div class="ui segment">
                    {{ form_row(form.name) }}
                    {% include '@DotitSyliusHighlightingPlugin/Field/_slug.html.twig' with { 'slugField': form.slug } %}
                    {{ form_row(form.description) }}
                    {{ form_row(form.enabled) }}

                </div>
            </div>
        </div>
    </div>
    <div class="ui attached segment">
        <div class="ui one column stackable grid">
            <div class="column">
                <div class="ui segment">
            {% block sylius_product_autocomplete_choice_row %}
                {{ form_row(form.products, {'remote_url': path('sylius_admin_ajax_product_by_name_phrase'), 'load_edit_url': path('sylius_admin_ajax_product_by_name_phrase'),'remote_criteria_type':'phrase','remote_criteria_name':'phrase'}) }}
            {% endblock %}
                </div></div>
        </div>

    </div>
</div>