    <div class="ui attached segment">
        <div class="ui segment dotit-image">
            {{ form_row(form.logoFile) }}
        </div>

        {{ sylius_template_event(['dotit_sylius_highlighting_plugin.admin.product_highlighting.' ~ action ~ '.tab_media', 'dotit_sylius_highlighting_plugin.admin.product_highlighting.tab_media'], {'form': form}) }}
    </div>
</div>
